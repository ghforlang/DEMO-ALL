<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.edu.nbu.cn.spring.bean"/>
    <bean id = "aDemoService" class = "com.edu.nbu.cn.spring.bean.ADemoService"/>

    <bean id = "bDemoService" class="com.edu.nbu.cn.spring.bean.BDemoService"/>
    <bean id = "aBizService" class="com.edu.nbu.cn.spring.bean.ABizService"/>
    <bean id = "bBizService" class="com.edu.nbu.cn.spring.bean.BBizService"/>

    <bean id="functionBeanRegisterPostProcessorRegistrar" class="com.edu.nbu.cn.spring.function.core.FunctionBeanRegisterPostProcessorRegistrar"/>
    <bean id="functionBeanRegisterPostProcessor" class="com.edu.nbu.cn.spring.function.core.FunctionBeanRegisterPostProcessor"/>

</beans>